nextflow_process {

    name "Test Process VALIDATE_FASTA"
    script "modules/prepare_sequences/main.nf"
    process "VALIDATE_FASTA"

    stage {
        symlink "tests/data/sequences/test.faa"
        symlink "tests/data/sequences/test.fna"
        symlink "tests/data/sequences/test.illegal.faa"
    }

    test("Should scan protein sequences without failures") {

        when {
            params {}
            process {
                """
                input[0] = file("meta/tests/data/sequences/test.faa")
                input[1] = false
                """
            }
        }

        then {
            assert process.success
        }
    }

    test("Should scan nucleic acid sequences without failures") {

        when {
            params {}
            process {
                """
                input[0] = file("meta/tests/data/sequences/test.fna")
                input[1] = true
                """
            }
        }

        then {
            assert process.success
        }
    }

    test("Should fail on finding illegal character") {

        when {
            params {}
            process {
                """
                input[0] = file("meta/tests/data/sequences/test.illegal.faa")
                input[1] = false
                """
            }
        }

        then {
            assert process.success
        }
    }

}
