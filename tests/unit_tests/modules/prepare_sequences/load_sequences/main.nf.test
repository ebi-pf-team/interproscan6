nextflow_process {

    name "Test Process LOAD_SEQUENCES"
    script "modules/prepare_sequences/main.nf"
    process "LOAD_SEQUENCES"

    stage {
        symlink "tests/data/sequences/test.faa"
        symlink "tests/data/sequences/test.fna"
    }

    test("Should load protein sequences without failures") {

        when {
            params {}
            process {
                """
                input[0] = file("meta/tests/data/sequences/test.faa")
                input[1] = false
                """
            }
        }

        then {
            assert process.success
        }
    }

    test("Should load nucleic acid sequences without failures") {

        when {
            params {}
            process {
                """
                input[0] = file("meta/tests/data/sequences/test.fna")
                input[1] = true
                """
            }
        }

        then {
            assert process.success
        }
    }

}
