nextflow_process {

    name "Test Process PARSE_PIRSF"
    script "modules/pirsf/main.nf"
    process "PARSE_PIRSF"

    stage {
        symlink "tests/data/channels/pirsf.hmmsearch.out"
        symlink "tests/data/channels/pirsf.noLookup.faa"
        symlink "tests/data/databases/pirsf/3.10/pirsf.dat"
    }

    test("Should run without failures") {

        when {
            process {
                """
                input[0] = [1, file("meta/tests/data/channels/pirsf.noLookup.faa"), file("meta/tests/data/channels/pirsf.hmmsearch.out")]
                input[1] = "meta/tests/data/databases/pirsf/3.10"
                input[2] = "pirsf.dat"
                """
            }
        }

        then {
            assert process.success
            def expected = "tests/data/channels/pirsf.json"
            def observed = process.out.get(0).get(0).get(1)
            def cmd = "python3 tests/regression_tests/test_matches.py --format intermediate --expected ${expected} --observed ${observed} --summary"
            def process = cmd.execute()
            process.waitFor()
            def stdout = process.text.trim().readLines()
            assert stdout[1] == "Matches only in expected : 0"
            assert stdout[2] == "Matches only in observed : 0"
        }
    }
}

