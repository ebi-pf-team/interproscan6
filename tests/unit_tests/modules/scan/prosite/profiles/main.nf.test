nextflow_process {

    name "Test Process PARSE_PFSEARCH"
    script "modules/prosite/profiles/main.nf"
    process "PARSE_PFSEARCH"

    stage {
        symlink "tests/data/channels/prosite_profiles.out"
        symlink "tests/data/databases/prosite/2025_01/skip_flagged_profiles.txt"
    }

    test("Should run without failures") {

        when {
            process {
                """
                input[0] = [1, file("meta/tests/data/channels/prosite_profiles.out")]
                input[1] = "meta/tests/data/databases/prosite/2025_01"
                input[2] = "skip_flagged_profiles.txt"
                """
            }
        }

        then {
            assert process.success
            def expected = "tests/data/channels/prositeprofiles.json"
            def observed = process.out.get(0).get(0).get(1)
            def cmd = "python3 tests/regression_tests/test_matches.py --format intermediate --expected ${expected} --observed ${observed} --summary"
            def process = cmd.execute()
            process.waitFor()
            def stdout = process.text.trim().readLines()
            assert stdout[1] == "Matches only in expected : 0"
            assert stdout[2] == "Matches only in observed : 0"
        }
    }
}

