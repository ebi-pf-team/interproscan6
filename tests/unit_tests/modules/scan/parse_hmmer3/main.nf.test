nextflow_process {

    name "Test Operation HMMER3.parseOutput"
    script "modules/antifam/main.nf"
    process "PARSE_ANTIFAM"

    stage {
        symlink "tests/data/channels/antifam.hmmsearch.out"
        symlink "tests/data/channels/antifam.json"
    }

    test("Should run without failures") {

        when {
            params {

            }
            process {
                """
                input[0] = [1, file("meta/tests/data/channels/antifam.hmmsearch.out")]
                """
            }
        }

        then {
            assert process.success
            def expected = "tests/data/channels/antifam.json"
            def observed = process.out.get(0).get(0).get(1)
            def cmd = "python3 tests/regression_tests/test_matches.py --format intermediate --expected ${expected} --observed ${observed} --summary --applications antifam"
            def process = cmd.execute()
            process.waitFor()
            def stdout = process.text.trim().readLines()
            assert stdout[1] == "Matches only in expected : 0"
            assert stdout[2] == "Matches only in observed : 0"
        }
    }

}
