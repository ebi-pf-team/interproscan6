nextflow_process {

    name "Test Process PREPARE_HAMAP"
    script "modules/hamap/main.nf"
    process "PREPARE_HAMAP"

    stage {
        symlink "tests/data/channels/hamap.hmmsearch.tab"
        symlink "tests/data/channels/hamap.faa"
        symlink "tests/data/databases/hamap/2025_01"
    }

    test("Should run PREPARE_SMART without failures") {

        when {
            process {
                """
                input[0] = [1, file("meta/tests/data/channels/hamap.hmmsearch.tab"), file("meta/tests/data/channels/hamap.faa")]
                input[1] = "meta/tests/data/databases/hamap/2025_01"
                input[2] = "profiles"
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }
    }
}
