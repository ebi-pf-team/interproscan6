nextflow_process {

    name "Test Process PARSE_PFAM"
    script "modules/pfam/main.nf"
    process "PARSE_PFAM"

    stage {
        symlink "tests/data/channels/pfam.hmmsearch.out"
        symlink "tests/data/databases/pfam/37.3/pfam_a.dat"
    }

    test("Should run without failures") {

        when {
            process {
                """
                input[0] = [1, file("meta/tests/data/channels/pfam.hmmsearch.out")]
                input[1] = "meta/tests/data/databases/pfam/37.3"
                input[2] = "pfam_a.dat"
                """
            }
        }

        then {
            assert process.success
            def expected = "tests/data/channels/pfam.json"
            def observed = process.out.get(0).get(0).get(1)
            def cmd = "python3 tests/regression_tests/test_matches.py --format intermediate --expected ${expected} --observed ${observed} --summary --applications coils"
            def process = cmd.execute()
            process.waitFor()
            def stdout = process.text.trim().readLines()
            assert stdout[1] == "Matches only in expected : 0"
            assert stdout[2] == "Matches only in observed : 0"
        }
    }
}

