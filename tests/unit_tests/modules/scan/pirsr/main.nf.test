nextflow_process {

    name "Test Process PARSE_PIRSR"
    script "modules/pirsr/main.nf"
    process "PARSE_PIRSR"

    stage {
        symlink "tests/data/channels/pirsr.hmmsearch.out"
        symlink "tests/data/databases/pirsr/2025_01/sr_uru.json"
    }

    test("Should run without failures") {

        when {
            process {
                """
                input[0] = [1, file("meta/tests/data/channels/pirsr.hmmsearch.out")]
                input[1] = "meta/tests/data/databases/pirsr/2025_01"
                input[2] = "sr_uru.json"
                """
            }
        }

        then {
            assert process.success
            def expected = "tests/data/channels/pirsr.json"
            def observed = process.out.get(0).get(0).get(1)
            def cmd = "python3 tests/regression_tests/test_matches.py --format intermediate --expected ${expected} --observed ${observed} --summary"
            def process = cmd.execute()
            process.waitFor()
            def stdout = process.text.trim().readLines()
            assert stdout[1] == "Matches only in expected : 0"
            assert stdout[2] == "Matches only in observed : 0"
        }
    }
}

