nextflow_process {

    name "Test Process PARSE_COILS"
    script "modules/coils/main.nf"
    process "PARSE_COILS"

    stage {
        symlink "tests/data/channels/coils.out"
    }

    test("Should run without failures") {

        when {
            process {
                """
                input[0] = [1, file("meta/tests/data/channels/coils.out")]
                """
            }
        }

        then {
            assert process.success
            def expected = "tests/data/channels/coils.json"
            def observed = process.out.get(0).get(0).get(1)
            def cmd = "python3 tests/regression_tests/test_matches.py --format intermediate --expected ${expected} --observed ${observed} --summary --applications coils"
            def process = cmd.execute()
            process.waitFor()
            def stdout = process.text.trim().readLines()
            assert stdout[1] == "Matches only in expected : 0"
            assert stdout[2] == "Matches only in observed : 0"
        }
    }
}

