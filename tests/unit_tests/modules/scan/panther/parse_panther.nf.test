nextflow_process {

    name "Test Process PARSE_PANTHER"
    script "modules/panther/main.nf"
    process "PARSE_PANTHER"

    stage {
        symlink "tests/data/channels/panther.treegrafter.json"
        symlink "tests/data/channels/epang.tsv"
    }

    test("Should run PREPARE_SMART without failures") {

        when {
            process {
                """
                input[0] = [1, file("meta/tests/data/channels/panther.treegrafter.json"), file("meta/tests/data/channels/epang.tsv")]
                """
            }
        }

        then {
            assert process.success
            def expected = "tests/data/channels/panther.json"
            def observed = process.out.get(0).get(0).get(1)
            def cmd = "python3 tests/regression_tests/test_matches.py --format intermediate --expected ${expected} --observed ${observed} --summary"
            def process = cmd.execute()
            process.waitFor()
            def stdout = process.text.trim().readLines()
            assert stdout[1] == "Matches only in expected : 0"
            assert stdout[2] == "Matches only in observed : 0"
        }
    }
}
