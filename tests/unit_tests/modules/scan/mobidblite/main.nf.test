nextflow_process {

    name "Test Process PARSE_MOBIDBLITE"
    script "modules/mobidblite/main.nf"
    process "PARSE_MOBIDBLITE"

    stage {
        symlink "tests/data/channels/mobidblite.output.tsv"
    }

    test("Should run without failures") {

        when {
            process {
                """
                input[0] = [1, file("meta/tests/data/channels/mobidblite.output.tsv")]
                """
            }
        }

        then {
            assert process.success
            def expected = "tests/data/channels/mobidblite.json"
            def observed = process.out.get(0).get(0).get(1)
            def cmd = "python3 tests/regression_tests/test_matches.py --format intermediate --expected ${expected} --observed ${observed} --summary --applications mobidblite"
            def process = cmd.execute()
            process.waitFor()
            def stdout = process.text.trim().readLines()
            assert stdout[1] == "Matches only in expected : 0"
            assert stdout[2] == "Matches only in observed : 0"
        }
    }
}

