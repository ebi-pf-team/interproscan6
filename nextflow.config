params {
    input               = null
    datadir             = null
    applications        = null
    nucleic             = false
    formats             = "json,tsv,xml"
    goterms             = false
    outdir              = "."
    pathways            = false
    signalpMode         = "fast"
    signalpGPU          = false
}
/*
    The value of params with camelCase names is not overriden
    by kebab-case param on the CLI.
    See https://github.com/nextflow-io/nextflow/issues/4033
*/
params.batchSize        = 5
params.disablePrecalc   = false
params.precalcURL       = "https://www.ebi.ac.uk/interpro/match-lookup"
params.signalpMode      = "fast"
params.signalpGPU       = false

includeConfig 'conf/applications.config'

profiles {
    local { includeConfig 'utilities/profiles/local.config' }
    lsf { includeConfig 'utilities/profiles/lsf.config' }
    slurm { includeConfig 'utilities/profiles/slurm.config' }
    apptainer { includeConfig 'utilities/profiles/apptainer.config' }
    docker { includeConfig 'utilities/profiles/docker.config' }
    singularity { includeConfig 'utilities/profiles/singularity.config' }
    ebi { includeConfig 'utilities/profiles/.ebi.config' }
}

manifest {
    author              = "Laise Florentino,Emma Hobbs,Ailsa Orr,Matthias Blum"
    defaultBranch       = "main"
    description         = "Genome-scale protein function classification"
    homePage            = "https://github.com/ebi-pf-team/interproscan6"
    name                = "InterProScan6"
    nextflowVersion     = ">24.04"
    version             = "6.0.0-alpha"
}

process {
    withLabel: write_results {
        publishDir = [
            path: params.outdir,
            mode: 'copy'
        ]
    }
}
