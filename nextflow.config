params {
    input               = null
    datadir             = null
    applications        = null
    nucleic             = false
    formats             = "json,tsv,xml"
    goterms             = false
    outdir              = "."
    pathways            = false
    signalpMode         = "fast"
    signalpGPU          = false
    matchesApiUrl       = null
    offline             = false
    batchSize           = 15000
    maxWorkers          = null
}

includeConfig 'conf/applications.config'
includeConfig 'conf/lookup.config'
includeConfig 'conf/xrefs.config'
includeConfig 'utilities/profiles/base.config'

profiles {
    local { includeConfig 'utilities/profiles/local.config' }
    lsf { includeConfig 'utilities/profiles/lsf.config' }
    slurm { includeConfig 'utilities/profiles/slurm.config' }
    apptainer { includeConfig 'utilities/profiles/apptainer.config' }
    docker { includeConfig 'utilities/profiles/docker.config' }
    singularity { includeConfig 'utilities/profiles/singularity.config' }
}

manifest {
    author                 = "Laise Florentino,Emma Hobbs,Ailsa Orr,Matthias Blum"
    defaultBranch          = "main"
    description            = "Genome-scale protein function classification"
    homePage               = "https://github.com/ebi-pf-team/interproscan6"
    name                   = "InterProScan6"
    nextflowVersion        = ">=24.10.4"
    version                = "6.0.0-alpha"
}

process {
    withLabel: write_results {
        publishDir = [
            path: params.outdir,
            mode: 'copy'
        ]
    }
}
